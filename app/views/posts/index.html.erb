<% @posts.each do |post| %>
	<h1><%= post.title %></h1>
	<h2>by: <%= post.bru_name %></h2>
	<p><%= post.body %></p>
	<td><%= link_to 'Show', post_path(post) %></td>
	<td><%= link_to 'Edit', edit_post_path(post) %></td>
	<td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Really??' } %></td>

<% end %>